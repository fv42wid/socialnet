<% if user_signed_in? %>
<div class="row">
  <div class="col-sm-3">
    <h4>News Feed</h4>
  </div> <!-- col-sm-3 -->
  <div class="col-sm-2"></div>
  <div class="col-sm-7">
    <%= render 'posts/form' %>
  </div> <!-- col-sm-7 -->
</div> <!-- row -->

<div class="row main-body-row">
  <div class="col-sm-3"></div>
  <div class="col-sm-9">
    <ul class="media-list">
      <% @events.each do |event| %>
        <%= render partial: "#{event.action}_#{event.eventable_type.downcase}", locals: {event: event} %>
	<%= render partial: 'posts/likes', locals: {post: event.eventable} %>
      <% end %>
    </ul>
  </div> <!-- col-sm-9 -->
</div> <!-- main-body-row -->
<% else %>
  <%= render "layouts/no_user" %>
<% end %>
