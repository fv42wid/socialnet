<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-9">
    <ul class="media-list">
      <li class="media">
	<div class="media-left">
	  <%= image_tag 'http://placehold.it/60x60', :class => "media-object" %>
	</div> <!-- media-left -->
	<div class="media-body">
	  <h5 class="media-heading"><%= @post.user.email %></h5>
	  <p><%= @post.body %></p>
	  <div id="post_<%= @post.id %>_likes">
	    <%= render partial: "likes", locals: { post: @post } %>
	  </div>
	</div> <!-- media-body -->
      </li>
    </ul>
  </div> <!-- col-sm-9 -->
</div> <!-- row -->

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
