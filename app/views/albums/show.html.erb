<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @album.user_id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @album.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @album.description %>
</p>

<% @pictures.in_groups_of(6, false) do |pictures| %>
  <div class="row image-thum-row">
    <% pictures.each do |picture| %>
      <div class="col-sm-2">
	<%= link_to image_tag(picture.location, :class => 'img-responsive'), user_picture_path(@user, picture) %>
      </div>
    <% end %>
  </div>
<% end %>

<%= link_to 'Edit', edit_user_album_path(@user, @album) %> |
<%= link_to 'Back', user_albums_path(@user) %>
