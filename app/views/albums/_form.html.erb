<%= form_for([@user, @album], :html => {:class => 'form-horizontal'}) do |f| %>
  <% if flash[:errors] %>
    <div class="alert alert-warnings">
      <%= flash[:errors].each do |key, value| %>
        <% value = value[0] %>
	<li><%= "#{key} #{value}" %></li>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-2 text-right">
      <%= f.label :title, :class => "control-label" %><br>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 text-right">
      <%= f.label :description, :class => "control-label" %><br>
    </div>
    <div class="col-sm-6">
      <textarea name="album[description]" id="album_description" class="form-control" rows="5"></textarea>
    </div>
  </div>
  <div class="form-group actions">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <button type="submit" class="btn btn-default">Create Album</button>
    </div>
  </div>
<% end %>
